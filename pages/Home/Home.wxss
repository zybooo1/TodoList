page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.todo_list_container {
  display: flex;
  flex-direction: column;
}

.todo_item_container {
  display: flex;
  flex-direction: column;
}

.todo_item_top {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.ic_done {
  width: 22px;
  height: 22px;
  padding: 10px 15px 10px 19px;
}

.todo_item_rect {
  width: 4px;
  height: 56px;
}

.todo_item_check_container {
  width: 48px;
  height: 48px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.todo_item_check {
  width: 18px;
  height: 18px;
  border-radius: 2px;
  border: 2px black solid;
}

.todo_item_content {
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #333333;
}

.content_done {
  color: #DADADA;
  text-decoration: line-through;
}

.line {
  width: 100%;
  height: 1px;
  background: #EFEFEF;
}

.list_container {
  margin-top: 15px;
  flex: 1;
}

.input_container {
  padding: 0 0 10px 10px;
  margin: 10px 15px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.top_container {
  border-bottom: #EFEFEF solid 1px;
  display: flex;
  flex-direction: column;
}

.colors_container {
  padding: 0 10px 10px 10px;
  display: flex;
  flex-direction: row;
}

.item_color {
  width: 20px;
  height: 20px;
  border-radius: 2px;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 10px solid transparent;
  background-clip: padding-box;
}

.item_color_check {
  width: 14px;
  height: 14px;
}

.input {
  flex: 1;
  height: 96rpx;
  caret-color: #FF8126;
}

.ic_go {
  width: 42rpx;
  height: 42rpx;
  padding: 27rpx;
}

.divider_container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 25px 15px 0 15px;
}


.divider_text_container {
  padding: 5px 10px;
  border-radius: 2px;
  background-color: #F2F2F2;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.divider_ic {
  width: 28rpx;
  height: 28rpx;
}

.divider_text {
  color: #999999;
  margin-left: 5px;
}

/* components/dialog/index.wxss */
.dialog-overlay-view {
  background-color: #000000;
  opacity: 0.5;
  position: fixed;
  z-index: 10;
}

.col-center {
  background-color: rgba(0, 0, 0, 0.3);
  position: fixed;
  z-index: 11;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.dialog_container {
  width: 100%;
  padding: 40px 0 20px 0;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.dialog_input {
  height: 100px;
  max-height: 100px;
  min-height: 100px;
  width: 80%;
  line-height: 1.6;
  caret-color: #FF8126;
}

.dialog_bottom_container {
  display: flex;
  width: 80%;
  flex-direction: row;
  align-items: center;
}

